<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Low Voltage Motor"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/health_imageView" />

        <ImageView
            android:id="@+id/health_imageView"
            android:layout_width="50dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/isAlive_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="isAlive: true"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/frequency_textView"
            android:layout_toEndOf="@+id/health_imageView" />

        <TextView
            android:id="@+id/frequency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frequency: 50Hz"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/title_textView"
            android:layout_toEndOf="@+id/health_imageView" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>